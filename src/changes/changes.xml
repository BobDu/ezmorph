<?xml version="1.0" encoding="ISO-8859-1"?>
<document>
   <properties>
      <title>EZMorph</title>
      <author email="aalmiray@users.sourceforge.net">
         Andres Almiray
      </author>
   </properties>
   <body>
      <release
         version="0.9.2"
         date="2006-12-12"
         desc="Service release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1613580">
            Add a ClassMorpher.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1607086">
            JDK 1.3 RuntimeException is not nestable.
         </action>
      </release>
      <release
         version="0.9.1"
         date="2006-11-27"
         desc="Service release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1603956">
            jdk 1.4 - java.lang.NoSuchFieldError: BigDecimal.ZERO
         </action>
      </release>
      <release
         version="0.9"
         date="2006-11-14"
         desc="Third public release">
         <action
            dev="Andres Almiray"
            type="add">
            Added BigDecimalMorpher and BigIntegerMorpher.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated NumberMorpher with BigDecimal and BigInteger.
            support.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated MorphUtils with BigDecimal and BigInteger support.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            MorphUtils now registers char/Character '\0' as default.
            instead of '0'.
         </action>
      </release>
      <release
         version="0.8.1"
         date="2006-08-15"
         desc="Second public release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1540833">
            StringMorpher always returns defaultValue first.
         </action>
      </release>
      <release
         version="0.8"
         date="2006-08-14"
         desc="First public release">
         <action
            dev="Andres Almiray"
            type="add">
            First release.
         </action>
      </release>
   </body>
</document>
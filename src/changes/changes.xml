<?xml version="1.0" encoding="ISO-8859-1"?>
<document>
   <properties>
      <title>EZMorph</title>
      <author email="aalmiray@users.sourceforge.net">
         Andres Almiray
      </author>
   </properties>
   <body>
      <release
         version="1.0.l"
         date="2007-02-11"
         desc="Service release">
         <action
            dev="Andres Almiray"
            issue="1651911"
            type="fix">
            Add number support for BooleanMorpher.
         </action>
         <action
            dev="Andres Almiray"
            issue="1648039"
            type="fix">
            Can not create an empty MorphDynaBean.
         </action>
      </release>
      <release
         version="1.0"
         date="2007-01-12"
         desc="Fourth public release">
         <action
            dev="Andres Almiray"
            type="delete">
            Removed duplicate code from net.sf.ezmorph.object Morphers.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated the javadocs.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated the tests (98% code coverage).
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            All Morphers are now final.
         </action>
         <action
            dev="Andres Almiray"
            issue="1632806"
            type="add">
            Added BeanMorpher, can morph from JavaBean to any
            JavaBean/DynaBean.
         </action>
         <action
            dev="Andres Almiray"
            issue="1632805"
            type="add">
            Added MorphDynaClass &amp; MorhDynaBean (from Json-lib).
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1632689">
            ClassMorpher does not morph a Class value.
         </action>
      </release>
      <release
         version="0.9.2"
         date="2006-12-12"
         desc="Service release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1613580">
            Add a ClassMorpher.
         </action>
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1607086">
            JDK 1.3 RuntimeException is not nestable.
         </action>
      </release>
      <release
         version="0.9.1"
         date="2006-11-27"
         desc="Service release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1603956">
            jdk 1.4 - java.lang.NoSuchFieldError: BigDecimal.ZERO
         </action>
      </release>
      <release
         version="0.9"
         date="2006-11-14"
         desc="Third public release">
         <action
            dev="Andres Almiray"
            type="add">
            Added BigDecimalMorpher and BigIntegerMorpher.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated NumberMorpher with BigDecimal and BigInteger.
            support.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            Updated MorphUtils with BigDecimal and BigInteger support.
         </action>
         <action
            dev="Andres Almiray"
            type="update">
            MorphUtils now registers char/Character '\0' as default.
            instead of '0'.
         </action>
      </release>
      <release
         version="0.8.1"
         date="2006-08-15"
         desc="Second public release">
         <action
            dev="Andres Almiray"
            type="fix"
            issue="1540833">
            StringMorpher always returns defaultValue first.
         </action>
      </release>
      <release
         version="0.8"
         date="2006-08-14"
         desc="First public release">
         <action
            dev="Andres Almiray"
            type="add">
            First release.
         </action>
      </release>
   </body>
</document>
